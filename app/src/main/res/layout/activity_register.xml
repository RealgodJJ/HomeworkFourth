<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegisterActivity">

    <TextView
        android:id="@+id/tv_register_header"
        style="@style/tv_header"
        android:text="@string/user_register" />

    <RelativeLayout
        style="@style/rl_content"
        android:layout_below="@id/tv_register_header">

        <ImageView
            android:id="@+id/iv_register_user"
            style="@style/iv_user"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/iv_register_password"
            style="@style/iv_password"
            android:layout_below="@id/iv_register_user"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/et_set_user"
            style="@style/et_user"
            android:layout_alignBottom="@id/iv_register_user"
            android:layout_toEndOf="@id/iv_register_user"
            tools:ignore="Autofill,LabelFor,TextFields" />

        <EditText
            android:id="@+id/et_set_password"
            style="@style/et_password"
            android:layout_alignStart="@id/et_set_user"
            android:layout_alignBottom="@id/iv_register_password"
            tools:ignore="Autofill,LabelFor,TextFields" />

        <Button
            android:id="@+id/bt_register"
            style="@style/bt_login"
            android:textColor="@color/slategray"
            android:background="@color/dodgerblue"
            android:layout_below="@id/iv_register_password"
            android:text="@string/register" />

    </RelativeLayout>

</RelativeLayout>